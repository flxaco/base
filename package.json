{
  "name": "root",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.5.5",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "browserslist": "^4.6.6",
    "copyfiles": "^2.1.1",
    "cssnano": "^4.1.10",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-formatter-pretty": "^2.1.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "gulp": "^4.0.2",
    "gulp-run-command": "0.0.9",
    "kss": "^3.0.0-beta.25",
    "lerna": "^3.15.0",
    "nightwatch": "^1.1.13",
    "nightwatch-accessibility": "^1.8.0",
    "npm-run-all": "^4.1.5",
    "pnx-mixtape-coverart": "^1.0.0-alpha.7",
    "postcss-cli": "^6.1.3",
    "postcss-color-function": "^4.1.0",
    "postcss-css-variables": "^0.13.0",
    "postcss-import": "^12.0.1",
    "postcss-inline-svg": "^4.1.0",
    "postcss-mixins": "^6.2.2",
    "postcss-object-fit-images": "^1.1.2",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^1.17.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-uglify": "^6.0.2",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-formatter-pretty": "^1.1.2",
    "svg-react-loader": "^0.4.6",
    "twig-drupal-filters": "^2.0.0",
    "wait-on": "^3.3.0"
  },
  "scripts": {
    "start": "npm-run-all clean watch",
    "build": "npm-run-all lerna:build kss svgo",
    "watch": "gulp",
    "lerna:bootstrap": "lerna bootstrap --ignore-scripts --no-ci --hoist {rollup,postcss-cli,webpack-cli,babel-loader,npm-run-all}",
    "lerna:build": "lerna run prepare",
    "clean": "rm -rf dist",
    "lint:css": "stylelint packages/*/src/**/*.css --custom-formatter=node_modules/stylelint-formatter-pretty",
    "lint:js": "eslint packages/*/src/**/*.js scripts/**/*.js -f pretty",
    "lint": "npm-run-all lint:*",
    "kss:assets": "npm-run-all assets:images assets:fonts",
    "kss:css": "./node_modules/.bin/postcss kss/kss.css --dir dist/css --config postcss.config.js",
    "kss:js": "rollup kss/kss.es6.js --o dist/js/kss.js --f cjs --name KSS -c rollup.config.js --silent",
    "kss:build": "kss -c kss.conf.json",
    "kss": "npm-run-all kss:*",
    "assets:images": "copyfiles -f 'packages/*/src/**/*.{svg,jpg,png,gif}' dist/images",
    "assets:fonts": "copyfiles -f 'packages/*/src/**/*.{woff,woff2}' dist/fonts",
    "svgo": "svgo -f dist/images --config=svgo.conf.yml -q",
    "server": "browser-sync start -c browser-sync.conf.js --no-ui",
    "test": "wait-on http://127.0.0.1:3000 -t 10000 && nightwatch",
    "create-package": "./scripts/create-package.sh",
    "link-packages": "./scripts/link-packages.sh",
    "clean-packages": "./scripts/clean-packages.sh",
    "ci:install": "npm ci && npm run lerna:bootstrap",
    "ci:test": "npm-run-all -p -r server test"
  },
  "browserslist": "last 2 versions, > 0.25%, firefox esr, ie 11, not dead",
  "private": true,
  "dependencies": {
    "object-fit-images": "^3.2.4"
  }
}
