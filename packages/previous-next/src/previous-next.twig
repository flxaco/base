<div class="previous-next">
  <div class="previous-next__link">
    {% if page_previous != 'null' %}
    <a href="{{ page_previous_link|default('#') }}" class="previous-next__prev">
      <div class="previous-next__title">Previous</div>
      <div class="previous-next__page-title">{{ page_previous|default('Category Title') }}</div>
    </a>
    {% endif %}
  </div>
  <div class="previous-next__link">
    {% if page_next != 'null' %}
    <a href="{{ page_next_link|default('#') }}" class="previous-next__next">
      <div class="previous-next__title">Next</div>
      <div class="previous-next__page-title">{{ page_next|default('Category Title') }}</div>
    </a>
    {% endif %}
  </div>
</div>
