{% set id = random() %}
<fieldset aria-describedby="radio{{ id }}Help" class="form__item form--radios">
  <legend>A set of radio inputs</legend>
  <div class="form__radio">
    <input id="radio1{{ id }}" name="radio" type="radio">
    <label for="radio1{{ id }}">This is an example radio button</label>
  </div>
  <div class="form__radio">
    <input id="radio2{{ id }}" name="radio" type="radio">
    <label for="radio2{{ id }}">This is an example
      <em>radio button</em>
    </label>
  </div>
  <div class="form__radio">
    <input id="radio3{{ id }}" name="radio" type="radio">
    <label for="radio3{{ id }}">This is an example
      <strong>radio button</strong>
    </label>
  </div>
  <div class="form__radio">
    <input id="radio4{{ id }}" name="radio" type="radio">
    <label for="radio4{{ id }}">This is an example
      <em>
        <strong>radio button</strong>
      </em>
    </label>
  </div>
  <div class="form__radio">
    <input id="radio5{{ id }}" name="radio" type="radio">
    <label for="radio5{{ id }}">This is an example
      <a href="#">radio button</a>
    </label>
  </div>
  <div class="form__description" id="radio{{ id }}Help" role="tooltip">Help text that provides additional information about the field.</div>
</fieldset>
