{% set id = random() %}
<fieldset aria-describedby="checkbox{{ id }}Help" class="form__item form--checkboxes {{ modifier_class }}">
  <legend>A set of checkbox inputs</legend>
  <div class="form__checkbox">
    <input id="checkbox1{{ id }}" type="checkbox">
    <label for="checkbox1{{ id }}">This is an example checkbox</label>
  </div>
  <div class="form__checkbox">
    <input id="checkbox2{{ id }}" type="checkbox">
    <label for="checkbox2{{ id }}">This is an example
      <em>checkbox</em>
    </label>
  </div>
  <div class="form__checkbox">
    <input id="checkbox3{{ id }}" type="checkbox">
    <label for="checkbox3{{ id }}">This is an example
      <strong>checkbox</strong>
    </label>
  </div>
  <div class="form__checkbox">
    <input id="checkbox4{{ id }}" type="checkbox">
    <label for="checkbox4{{ id }}">This is an example
      <em>
        <strong>checkbox</strong>
      </em>
    </label>
  </div>
  <div class="form__checkbox">
    <input id="checkbox5{{ id }}" type="checkbox">
    <label for="checkbox5{{ id }}">This is an example
      <a href="#">checkbox</a>
    </label>
  </div>
  <div class="form__description" id="checkbox{{ id }}Help" role="tooltip">Help text that provides additional information about the field.</div>
</fieldset>
